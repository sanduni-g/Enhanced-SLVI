<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="51dp"
                    android:layout_height="46dp"
                    app:srcCompat="@drawable/blackback"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Profile"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="15dp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/imageView_contact_us"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/profileicon" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="18dp"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="60dp"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:textColor="#696969"
                    android:layout_marginTop="60dp"
                    android:textSize="18dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="40dp"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/email_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:textColor="#696969"
                    android:layout_marginTop="40dp"
                    android:textSize="18dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Account Creation"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="18dp"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="40dp"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:textColor="#696969"
                    android:layout_marginTop="40dp"
                    android:textSize="18dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/toplay"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your requirement is our priority. Please feel free to submit any concren you have regarding the app using the contact us form. Do not forget to provide your valueble feedback on us as well."
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"
                    android:layout_marginRight="20dp"
                    android:justificationMode="inter_word"/>

                <RelativeLayout
                    android:layout_below= "@id/lay1454"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_inquiry"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="100dp"
                        android:background="@drawable/rosepetalsbtn"
                        android:text="Inquiry"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:backgroundTint="@color/cardview_shadow_end_color"
                        app:backgroundTintMode="add"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>