<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".SubmittedInquiry"
android:orientation="vertical">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="51dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/blackback"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Inquiry"
                android:textSize="30sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp" />


        </LinearLayout>
        <ImageView
            android:id="@+id/imageView_contact_us"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/inquiry"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_corner_white"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp" />
            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="25dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">


                <TextView
                    android:id="@+id/name_view"
                    android:layout_width="280dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="25dp"
                    android:hint="Name Comes Here"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:paddingTop="2dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="25dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">


                <TextView
                    android:id="@+id/email_view"
                    android:layout_width="280dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="25dp"
                    android:hint="Email Comes Here"
                    android:textSize="15sp"
                    android:paddingTop="2dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inquiry"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">


                <TextView
                    android:id="@+id/inquiry_view"
                    android:lines="8"
                    android:minLines="1"
                    android:gravity="top|start"
                    android:maxLines="10"
                    android:layout_height="wrap_content"
                    android:layout_width="290dp"
                    android:scrollbars="vertical"
                    android:layout_marginStart="5dp"
                    android:hint="Your Comes Here"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">


                <TextView
                    android:id="@+id/reply_view"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:minLines="1"
                    android:gravity="top|start"
                    android:maxLines="10"
                    android:layout_height="wrap_content"
                    android:layout_width="290dp"
                    android:scrollbars="vertical"
                    android:layout_marginStart="5dp"
                    android:hint="Reply Comes Here"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>

</LinearLayout>