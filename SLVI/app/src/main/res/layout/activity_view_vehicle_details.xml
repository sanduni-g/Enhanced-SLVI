<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewVehicleDetails"
    android:paddingBottom="@dimen/activity_vertical_margin">

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/upper"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@drawable/rosepetalsvd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="51dp"
            android:layout_height="46dp"
            app:srcCompat="@drawable/whiteback"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"/>


        <ImageView
            android:id="@+id/imageView_vehicle"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/cardetails" />
    </LinearLayout>

    <TextView
        android:id="@+id/bookmark_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Details"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="60dp"/>

</LinearLayout>

<LinearLayout
    android:id="@+id/body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/upper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <EditText
            android:id="@+id/vevicle_number_input"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:hint="Enter Vehicle Number (EX: CAA-xxxx)"
            android:inputType="text"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/search_icon_"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-55dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/search"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Absolute Owner"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(AB. Owner) "
                android:layout_marginLeft="10dp"
                android:textColor="#808080">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp">
        </TextView>
        <TextView
            android:id="@+id/abowner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEYLAN BANK PLC"
            android:layout_marginLeft="40dp"
            android:textColor="#696969"
            android:layout_marginTop="10dp">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Engine Number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black">
            </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp">
        </TextView>
        <TextView
            android:id="@+id/engine_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KF-N012544756"
            android:layout_marginLeft="40dp"
            android:textColor="#696969"
            android:layout_marginTop="10dp">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Class"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp">
        </TextView>
        <TextView
            android:id="@+id/vehicle_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dual Purpose Vehicle"
            android:layout_marginLeft="40dp"
            android:textColor="#696969"
            android:layout_marginTop="10dp">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Make"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp">
        </TextView>
        <TextView
            android:id="@+id/make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAIHATSU"
            android:layout_marginLeft="40dp"
            android:textColor="#696969"
            android:layout_marginTop="10dp">
        </TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Model"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp">
        </TextView>
        <TextView
            android:id="@+id/model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPD:4552-0156"
            android:layout_marginLeft="40dp"
            android:textColor="#696969"
            android:layout_marginTop="10dp">
        </TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Year Of Manufacture"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(YOM)"
                android:layout_marginLeft="10dp"
                android:textColor="#808080">
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp">
        </TextView>
        <TextView
            android:id="@+id/yom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2011"
            android:layout_marginLeft="40dp"
            android:textColor="#696969"
            android:layout_marginTop="10dp">
        </TextView>


    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Chassis Number"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp">
    </TextView>
    <TextView
        android:id="@+id/chassis_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45547:544:212"
        android:layout_marginLeft="40dp"
        android:textColor="#696969"
        android:layout_marginTop="10dp">
    </TextView>

</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/dottedline" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: Full Information of this vehicle can be obtained through"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/srilanka_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.srilanaka.lk"
            android:textSize="16sp"
            android:textColor="#0000FF"
            android:linksClickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:layout_marginLeft="4dp" />

        <TextView
            android:id="@+id/motor_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.motortraffic.gov.lk"
            android:layout_marginLeft="4dp"
            android:textSize="16sp"
            android:textColor="#0000FF"
            android:linksClickable="true"
            android:clickable="true" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISCLAIMER: The Information provided in this service is only for your reference and should not be misused."
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15dp"
        android:justificationMode="inter_word"/>


</LinearLayout>

</RelativeLayout>
</ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>