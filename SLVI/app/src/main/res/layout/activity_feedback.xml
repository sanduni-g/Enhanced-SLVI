<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="51dp"
                    android:layout_height="46dp"
                    app:srcCompat="@drawable/blackback"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback Forum"
                    android:textSize="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" />


            </LinearLayout>
            <ImageView
                android:id="@+id/imageView_contact_us"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/feedbacklogo" />

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_white"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Rate Your Experince"
                    android:layout_marginLeft="70dp"
                    android:textSize="20dp"></TextView>
                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_corner_white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/feedback_worst"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/fdworst" />

                    <ImageView
                        android:id="@+id/feedback_bad"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/fdbad" />

                    <ImageView
                        android:id="@+id/feedback_normal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/fdnuetral" />

                    <ImageView
                        android:id="@+id/feedback_good"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/fdgood" />

                    <ImageView
                        android:id="@+id/feedback_best"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/fdbest" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corner_white"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp">


                    <EditText
                        android:id="@+id/msg_input"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="1"
                        android:gravity="top|start"
                        android:maxLines="10"
                        android:layout_height="wrap_content"
                        android:layout_width="290dp"
                        android:scrollbars="vertical"
                        android:layout_marginLeft="10dp"
                        android:hint="Write Your Message Here"
                        android:layout_marginTop="5dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/feedback_sub_btn"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rosepetalsbtn"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:backgroundTint="@color/cardview_shadow_end_color"
                    app:backgroundTintMode="add"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>